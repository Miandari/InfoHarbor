# Environment variables for the Elderly Assistant Agent
# Copy this file to .env and fill in your values

# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# Agent Configuration
AGENT_AGENT_NAME="Elder Care Assistant"
AGENT_LLM_MODEL="gpt-4o-mini"
AGENT_LLM_TEMPERATURE=0.7
AGENT_ELDER_MODE=true

# API Configuration
AGENT_API_HOST=0.0.0.0
AGENT_API_PORT=8000
AGENT_API_PREFIX="/api/v1"

# Database
AGENT_MEMORY_DB_PATH="data/memory.db"
AGENT_MEMORY_TTL_DAYS=365

# Development
AGENT_DEBUG=true
AGENT_LOG_LEVEL="INFO"

# Deployment (for Render.com)
# RENDER_EXTERNAL_URL=https://your-app.onrender.com